<?import com.comp2042.view.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.controller.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <Label fx:id="scoreLabel" styleClass="scoreClass" layoutX="85" layoutY="60"/>
    <Label fx:id="scoreLabelText" text="SCORE:" layoutX="15" layoutY="60" styleClass="scoreClass"/>



    <VBox layoutX="240" layoutY="1" spacing="5">
        <children>
            <Label text="NEXT" styleClass="nextBrickLabel" alignment="CENTER"/>
            <!-- 为整个预览区域添加外框 -->
            <Pane styleClass="nextBrick">
                <VBox spacing="5" style="-fx-padding: 5;">
                    <GridPane fx:id="nextBrickPanel1" hgap="1" vgap="1" prefHeight="80" prefWidth="80"/>
                    <GridPane fx:id="nextBrickPanel2" hgap="1" vgap="1" prefHeight="80" prefWidth="80"/>
                    <GridPane fx:id="nextBrickPanel3" hgap="1" vgap="1" prefHeight="80" prefWidth="80"/>
                </VBox>
            </Pane>
        </children>
    </VBox>

    <Button fx:id="pauseButton" text="PAUSE" layoutX="235" layoutY="380" onAction="#pauseGame" prefWidth="100" prefHeight="30"/>

    <Button fx:id="newGameButton" text="NEW GAME" layoutX="235" layoutY="420" onAction="#newGame" prefWidth="100" prefHeight="30"/>

    <Label fx:id="levelLabel" text="1" layoutX="85" layoutY="30" styleClass="scoreClass"/>
    <Label fx:id="levelLabelText" text="LEVEL:" layoutX="15" layoutY="30" styleClass="scoreClass"/>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>